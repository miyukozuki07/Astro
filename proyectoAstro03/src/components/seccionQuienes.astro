---
interface Props {
    title?: string;
    content?: string;
    content1?: string;
    content2?: string;
    content3?: string;
    op?: string;
    op1?: string;
    op2?: string;
    op3?: string;
    op4?: string;
}

const {title, content, content1, content2, content3, op, op1, op2, op3, op4} = Astro.props;
---

<div id="seccion-quienes" class="pt-5 pb-14 mb-8 border-b-[1px] border-zinc-900 border-dotted">
    <h3 class="text-endeavour-700 text-xl font-roboto font-bold mb-2">{title}</h3>
    <p class="text-zinc-700 text-justify text-sm font-thin mb-2.5">{content}</p>
    <p class="text-zinc-700 text-justify text-sm font-thin mb-2.5">{content1}</p>
    <p class="text-zinc-700 text-justify text-sm font-thin mb-2.5">{content2}</p>
    <ul class="mx-9">
        <li class="list-disc text-zinc-500 text-sm font-bold">{op}</li>
        <li class="list-disc text-zinc-500 text-sm font-bold">{op1}</li>
        <li class="list-disc text-zinc-500 text-sm font-bold">{op2}</li>
        <li class="list-disc text-zinc-500 text-sm font-bold">{op3}</li>
        <li class="list-disc text-zinc-500 text-sm font-bold">{op4}</li>
    </ul>
    <p class="text-zinc-700 text-justify text-sm font-thin mt-2.5">{content3}</p>
    <slot/>
</div>